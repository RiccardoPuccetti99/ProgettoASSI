<%= content_for :body do %>
<main style="background-color: #140e30; color: white; padding-left: 10px">
  <br>
  <h1 style="text-align:center;"><%= @guide.title%></h1>
  <%= link_to "Back to guide list", guides_path %>
  <br><br>
  <h2> Details:</h2>
	
	<ul id="details">
		<li>
			Champion:
			<%= @guide.champ_name%></li>
		<li>
			Role:
			<%= @guide.champ_role%></li>
		<li>
			Creation date:
			<%= @guide.created_at.strftime("%B %d, %Y")%></li>  
		<li>
			Creator:
			<%= @guide.user.uid%></li>	
	</ul>		      

	<h3> Description: </h3>

	<p id="description"><%= @guide.guida%></p>

	<h3> Building details: </h3>

	<p id="rune">
	Runes:
	<%= @guide.champ_rune%></p>

	<p id="skill">
	Skills order:
	<%= @guide.skill_order%></p>

	<p id="item">
	List of items:
	<%= @guide.item%></p>

	<h3> Matchups: </h3>

	<p id="ideal">
	Ideal:
	<%= @guide.ideal%></p>

	<p id="counter">
	Ideal:
	<%= @guide.counter%></p>

	<% if user_signed_in? && (@guide.user_id == current_user || current_user.admin?) %>
	
	<br>
	<%= link_to "Edit info", edit_guide_path(@guide) %> - <%= link_to "Delete", guide_path(@guide), :method => :delete %>
	<br>
	<% end %>
	

	<hr class="rounded">
	<%= link_to 'Add review', new_review_path(:guide_id => @guide) %>



	<h3 style="padding-top: 20px">Reviews:</h3>
   	<% if @guide.review.empty? %>
	<p>No reviews yet</p>
		
 	<% else %>
	<% if can? :read, Review %>
		<table id="reviews" class="table" style="background:rgba(61, 76, 218, 0.5);">
    <thead>
      <tr>
        <th> Username </th>
        <th> Comment </th>
        <th> Rating </th>
		<th> Delete </th>
      </tr>
    </thead>  
    <tbody>
      <% @guide.review.each do |review| %>
        <tr>
          <th> <%= review.user.uid%> </th>
          <th> <%= review.comment%> </th>
          <th> <%= review.rating%> </th>
		  <th><% if user_signed_in? && (review.user == current_user || current_user.admin?) %>
				<%= link_to "Delete", review_path(:id => review.id,:guide_id => @guide), :method => :delete %>
			<% end %>
		  </th>
        </tr> 
      <% end %>
    </tbody>
    </table>  
	<% else %>
		<b>You don't have the rights to read reviews.</b>
	<% end %>
	<% end %>	
<br/><br/>



</main>    
<% end %> 