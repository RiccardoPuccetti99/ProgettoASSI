<%= content_for :body do %>
<main style="background-color: #140e30">
<%# <div><%= image_tag("profile_icon.svg", {}) %> 
<div style="color: white; font-size: 30px; text-align: center; padding-top: 30px">
  <p>Creator: <%= @user.uid %></p>
  <p>Guides: <%= @user.guide.count %> |  Comments: <%= @user.review.count %>  </p>
  <br>
</div>

<div style="padding-left:20px; padding-right:20px">
<table id="guides" class="table" style="background:rgba(61, 76, 218, 0.5);">
  <thead>
      <tr>
        <th> Title </th>
        <th> Champion </th>
        <th> Role </th>
        <th> Creation date </th>
        <th> Rating </th>
        <th> More info </th>
      </tr>
    </thead>  
    <tbody>
      <% @user.guide.each do |guide| %>
        <tr>
          <th> <%= guide.title %> </th>
          <th> <%= guide.champ_name %> </th>
          <th> <%= guide.champ_role %> </th>
          <th> <%= guide.created_at %> </th>
          <th> <%= guide.avg_reviews %> </th>
          <th> <%= link_to "Details", guide_path(guide)%> </th>
		  </th>
        </tr> 
      <% end %>
    </tbody>
    </table>
    </div>

  



  </main>
<% end %>